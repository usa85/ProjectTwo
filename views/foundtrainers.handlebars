<div class="container">

{{#each trainers}}

<div class="float-left">
                <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
                    <div class="mainflip">
                        <div class="frontside">
                            <div class="card">
                                <div class="card-body text-center">

                                     <div class="card-image">
			                            <img class = "animated fadeIn" style = "border-radius:50%" src="/{{this.trainerPhone}}">
			                         </div>

                                    <h4 class="card-title">{{this.trainerName}}</h4>
                                    <p class="card-text">{{this.trainerAvailibility}}</p>
                                    
                                    <a href="#" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="backside">
                            <div class="card">
                                <div class="card-body text-center mt-4">
                                    <h4 class="card-title">{{this.trainerName}}</h4>
                                    <p class="card-text">{{this.trainerAbout}}</p>
                                    <p class="card-text">{{this.trainerPhone}}</p>
                                    <p class="card-text">{{this.trainerEmail}}</p>

                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

{{/each}}
    
</div>